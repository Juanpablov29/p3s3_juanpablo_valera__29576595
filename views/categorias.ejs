<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Categorías - Tienda de Productos de Limpieza</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><a href="/">Inicio</a></li>
        <li><a href="/categorias">Categorías</a></li>
        <li><a href="/productos">Productos</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <h1>Categorías</h1>
    <form action="/categorias/crear" method="POST">
      <input type="text" name="categoria" placeholder="Nueva Categoría" required>
      <button type="submit">Agregar</button>
    </form>
    <ul>
      <% categorias.forEach(categoria => { %>
        <li>
          <form action="/categorias/editar/<%= categoria.id %>" method="POST" style="display: inline;">
            <input type="text" name="categoria" value="<%= categoria.categoria %>">
            <button type="submit">Editar</button>
          </form>
          <form action="/categorias/eliminar/<%= categoria.id %>" method="POST" style="display: inline;">
            <button type="submit">Eliminar</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </main>
</body>
</html>
